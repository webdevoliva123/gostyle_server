{
  "name": "validate-password",
  "version": "1.0.4",
  "description": "Strengthen your user's passwords",
  "author": "Mike DeWitt <mdewitt07@gmail.com>",
  "license": "MIT",
  "keyword": ["password", "validation", "password strength", "password security"],
  "repository": {
    "type": "git",
    "url": "https://github.com/mndewitt/validate-password"
  },
  "devDependencies": {
    "mocha": "^2.4.5",
    "uglifyify": "^3.0.1"
  },
  "scripts": {
    "build": "npm run build:max && npm run build:min",
    "build:max": "browserify index --standalone ValidatePassword --outfile ./dist/validate-password.js",
    "build:min": "browserify index --transform [uglifyify] --standalone ValidatePassword --outfile ./dist/validate-password.min.js",
    "test": "./node_modules/mocha/bin/mocha *.test.js --reporter spec"
  }
}
